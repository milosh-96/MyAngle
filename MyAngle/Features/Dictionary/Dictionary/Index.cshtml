@using MyAngle.Mvc.Features.Dictionary.Dictionary;
@using MyAngle.Mvc.Features.Dictionary.Search;
@model  DictionaryIndexViewModel

<div>
    <h2>Dictionary</h2>

    <hr />
    <p>Search Word: </p>
    <partial name="../Search/SearchFormPartial.cshtml"
         model="new SearchFormPartialViewModel(){SearchQuery=Model.SearchQuery}"
    />

    <hr />
    <h3>Featured Word: <a asp-action="SingleWord" asp-route-word="@Model.FeaturedWord.Name">
            @Model.FeaturedWord.Name</a> (@Model.FeaturedWord.Phonetic)
    </h3>

</div>